                                <label class="form-element-dropdown">ประเภทนิติบุคคล</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>
                        <div class="col-lg-6 pl-0">
                            <div class="form-input">
                                <input class="form-element-input" type="text" placeholder="กรุณาระบุชื่อกิจการ" ng-model="TableAdd.Name" />
                                <div class="form-element-bar"></div>
                                <label class="form-element-label">ชื่อกิจการ ( ภาษาไทย )</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>
                    </div>
                    <div class="row row-form">
                        <div class="col-md-4">
                        </div>
                        <div class="col-lg-2 pl-0">
                            <div class="form-input ">
                                <select select2 class="dropdown2 form-control" id="exampleFormControlSelect2" ng-options="item as item.NameEn for item in Parameter.Model"
