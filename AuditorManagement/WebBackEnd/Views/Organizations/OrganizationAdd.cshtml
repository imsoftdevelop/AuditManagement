                                    <option value="" class="text-muted" selected style="display:none">กรุณาเลือก</option>
                                </select>
                                <label class="form-element-dropdown">ประเภทนิติบุคคล ( EN )</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>
                        <div class="col-lg-6 pl-0">
                            <div class="form-input">
                                <input class="form-element-input" type="text" placeholder="กรุณาระบุชื่อกิจการ" ng-model="TableAdd.NameEn" />
                                <div class="form-element-bar"></div>
                                <label class="form-element-label">ชื่อกิจการ ( ภาษาอังกฤษ )</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>
                    </div>
                    <div class="row row-form">
                        <div class="col-md-4">
                        </div>
                        <div class="col-lg-4 pl-0">
                            <div class="form-input">
                                <input class="form-element-input" type="text" placeholder="กรุณาระบุเลขเสียภาษี" number-only ng-model="TableAdd.TaxId" />
                                <div class="form-element-bar"></div>
                                <label class="form-element-label">เลขที่เสียภาษี</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>
                        <div class="col-lg-4 pl-0">
                            <div class="form-input ">
                                <select select2 class="dropdown2 form-control" id="exampleFormControlSelect2" ng-model="TableAdd.SelectType">
                                    <option value="" class="text-muted" selected style="display:none">กรุณาเลือก</option>
                                    <option value="สำนักงานใหญ่">สำนักงานใหญ่</option>
                                    <option value="สาขา">สำนักงานย่อย</option>
                                </select>
                                <label class="form-element-dropdown">ประเภทสำนักงาน</label>
                                <label class="form-element-required">* </label>
                            </div>
                        </div>

                    </div>
                    <div class="row row-form">
                        <div class="col-md-4">
                        </div>
                        <div class="col-lg-4 pl-0">
