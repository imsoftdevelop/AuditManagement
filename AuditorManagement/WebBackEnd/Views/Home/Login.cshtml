@{
    Layout = null;
}
<!--Refere reCaptcha API-->
<script src="https://www.google.com/recaptcha/api.js?onload=renderRecaptcha&render=explicit" async defer></script>
<script>
    var your_site_key = '6Lcmoi8jAAAAABtAv8hejvhgwNGdRC6jMKQ4D__m';
    var renderRecaptcha = function () {
        grecaptcha.render('ReCaptchContainer', {
            'sitekey': your_site_key,
            'callback': reCaptchaCallback,
            theme: 'light', //light or dark
            type: 'image',// image or audio
            size: 'normal'//normal or compact
        });
    };

    var reCaptchaCallback = function (response) {
        if (response !== '') {
            //jQuery('#lblMessage').css('color', 'green').html('Success');
        }
    };

</script>
<!-- Begin page -->
<div class="account-pages my-3 pt-sm-3" data-ng-init="init()">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="card overflow-hidden rounded-4">
                    <div class="card-body pt-0 rounded-4">

                        <h3 class="text-center mt-5 mb-4">
                            <a href="index.html" class="d-block auth-logo">
                                <img src="@Url.Content("~/")assets/images/logo-light.png" alt="" height="60" class="auth-logo-dark">
                                <img src="@Url.Content("~/")assets/images/logo-light.png" alt="" height="30" class="auth-logo-light">
                            </a>
                        </h3>
                        <div class="p-3">
                            <h2 class="text-muted font-size-24 mb-1 text-center">เข้าสู่ระบบ</h2>
                            <p class="text-muted text-center font-size-16">ยังไม่มีบัญชี? <a class="text-search" ui-sref="register">สมัครใช้งาน</a><p>
                                <form class="form-horizontal mt-4">
                                    <div class="row row-form">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-lg-10 pl-0">
                                            <div class="form-input">
                                                <input id="txtusername" class="form-element-input form-element-input-show logintext" autocomplete="off" type="email" ng-model="Login.Email" placeholder="กรุณากรอกอีเมล ( exmaple@mail.com )" required />
                                                <div class="form-element-bar"></div>
                                                <label class="form-element-label font-weight-bold" for="name">อีเมล</label>
                                                <label class="form-element-required" for="name">* </label>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                    <div class="row row-form">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-lg-10 pl-0">
                                            <div class="form-input">
                                                <input id="txtpassword" class="form-element-input form-element-input-show" type="password" autocomplete="off" ng-model="Login.Password" placeholder="กรุณากรอกรหัสผ่าน" required />
                                                <div class="form-element-bar"></div>
                                                <label class="form-element-label font-weight-bold" for="name">รหัสผ่าน</label>
                                                <label class="form-element-required" for="name">* </label>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                    <div class="mb-3 row mt-4">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-5">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="customControlInline" ng-click="Login.IsAlway">
                                                <label class="form-check-label font-size-16" for="customControlInline">
                                                    ให้ฉันอยู่ในระบบต่อไป
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-5 text-right justify-content-end">
                                            <a class="text-search font-size-16" ui-sref="forgetpassword"><i class="mdi mdi-lock"></i>ลืมรหัสผ่าน?</a>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                    <div class="mb-3 row mt-4">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-10">
                                            <div class="d-grid text-center">
                                                <div class="g-recaptcha" data-sitekey="6Lcmoi8jAAAAABtAv8hejvhgwNGdRC6jMKQ4D__m"></div>
                                                <div id="ReCaptchContainer" class="cap"></div>
                                                <label id="lblMessage" runat="server" clientidmode="static"></label>
                                                <button type="button" id="demo-form" class="btn btn-primary btn-lg waves-effect waves-light" ng-click="OnClickLogin()">
                                                    เข้าสู่ระบบด้วย อีเมล
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                    <div class="mb-3 row mt-4 line-relative">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-10">
                                            <hr />
                                            <span class="text-half">หรือเข้าสู่ระบบด้วย</span>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                    <div class="mb-3 row mt-4">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-10">
                                            <div class="d-grid">
                                                <button type="button" class="btn btn-outline-google btn-lg waves-effect waves-light">
                                                    <img src="@Url.Content("~/")assets/images/icons/ggle.png" alt="" height="16" class="auth-logo-light mx-3">   เข้าสู่ระบบด้วย Google
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                    </div>
                                </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END layout-wrapper -->
