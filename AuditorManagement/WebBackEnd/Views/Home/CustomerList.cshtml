@{
    Layout = null;
}
<!-- Begin page -->
<div class="account-pages my-5 pt-sm-3" data-ng-init="init()">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="card overflow-hidden rounded-4">
                    <div class="card-body pt-0 rounded-4">

                        <h3 class="text-center mt-5 mb-4">
                            <a href="index.html" class="d-block auth-logo">
                                <img src="@Url.Content("~/")assets/images/logo-light.png" alt="" height="60" class="auth-logo-dark">
                                <img src="@Url.Content("~/")assets/images/logo-light.png" alt="" height="30" class="auth-logo-light">
                            </a>
                        </h3>

                        <div class="p-3">
                            <h2 class="text-muted font-size-24 mb-1 text-center">เลือกลูกค้าที่ต้องการตรวจสอบ</h2>
                            <p class="text-muted text-center font-size-16">รายการข้อมูลลูกค้าที่ได้รับมอบหมาย<p>
                                <div class="table-rep-plugin py-2 pb-0">
                                    <table id="tech-companies-1" class="table-data  table-striped">
                                        <thead>
                                            <tr class="headerRow">
                                                <th></th>
                                                <th>เลือลูกค้า</th>
                                                <th class="text-center"></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="values in Parameter.Customer | offset: currentPage*itemsPerPage | limitTo: itemsPerPage  ">
                                                <th>{{values.Seq}}</th>
                                                <td>
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <i class="mdi mdi-book-account-outline font-size-20 text-muted align-middle me-1"></i>
                                                            <text class="text-search font-weight-bold font-size-16">{{values.ParamModel.Name}} {{values.Name}}</text>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            รหัสลูกค้า : <span class="text-search">{{values.CustomerCode}}</span>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            เลขที่ผู้เสียภาษี : {{values.TaxId}}
                                                        </div>
                                                        <div class="col-lg-12">
                                                            ประเภทสำนักงาน : {{values.Type}}
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <a ng-click="OnClickCustomer(values.CustomerId)" class="a-select-b" ><i class="mdi mdi-arrow-right-thick"></i></a>
                                                </td>
                                            </tr>
                                            <tr class="text-center " ng-show="Parameter.Customer == undefined || Parameter.Customer.length == 0">
                                                <td colspan="3" class="empty">
                                                    <img src="@Url.Content("~/")assets/images/icons/icon-list.png" width="60" class="d-block m-auto">
                                                    ไม่พบรายการ
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <hr />
                                    <div class="d-flex justify-content-end">
                                        <div data-v-e8100c36="" class="numberShow">
                                            <text class="mr-2 mx-2 mb-0 font-size-16">แสดง</text>
                                            <select class="day form-control form-select form-select-sm" style="width: auto;" ng-change="OnClickChangePageTotal()" ng-model="itemsPerPage">
                                                <option value="5">5</option>
                                                <option value="10">10</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                            </select>
                                            <div data-v-76901dc6="" class="selectInputDropdown noLabel" style="width: 100%;">
                                                <text class="mr-2 mx-2 mb-0 font-size-16">รายการ</text>
                                            </div>
                                            <div data-v-e8100c36="" class="page-data">
                                                <div data-v-e8100c36="" class="prevArrow" ng-class="prevPageDisabled()" ng-click="prevPage()">
                                                    <i data-v-e8100c36="" class="fa fa-chevron-left"></i>
                                                </div>
                                                <text data-v-e8100c36="" class="mr-2 mx-2 mb-0 font-size-16">หน้า</text>
                                                <select class="day form-control form-select form-select-sm" style="width: auto;" ng-options="item as item.name for item in retpage" ng-model="changePages" ng-change="setPage(item)">
                                                    @*<option ng-repeat="rows in retpage" value="{{rows.code}}" >{{rows.name}}</option>*@
                                                </select>
                                                <div data-v-e8100c36="" class="nextArrow" ng-class="nextPageDisabled()" ng-click="nextPage()">
                                                    <i data-v-e8100c36="" class="fa fa-chevron-right"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>

                        <div class="mb-3 row ">
                            <hr />
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-10 text-center">
                                <div class="d-grid">
                                    <a type="button" class="text-search font-weight-bold font-size-18" ui-sref="login">
                                        <i class="mdi mdi-logout mx-2"></i>ออกจากระบบ
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END layout-wrapper -->
